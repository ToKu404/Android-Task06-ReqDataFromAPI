<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191826"
    tools:context=".activities.DetailTvShowActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/container_tvshow_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="1dp"
        android:layout_marginTop="180dp"
        />
    <FrameLayout
        android:id="@+id/iv_banner_container"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/iv_ts_banner"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="fitXY" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fg_drama_detail"/>

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_poster_container"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp">
        <ImageView
            android:id="@+id/iv_ts_poster"
            android:layout_height="140dp"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_ts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TvShow"
        android:fontFamily="@font/lato_bold"
        android:elevation="2dp"
        android:textSize="17sp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/iv_poster_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_ts_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020"
        android:textColor="@color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ts_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/ll_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ts_year">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Vote : "/>
        <TextView
            android:id="@+id/tv_ts_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="19000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/ll_vote"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="Sinopsis"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_ts_sinopsis"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textColor="#D5CECE"
                    android:fontFamily="@font/lato_regular"
                    android:text="sinopsis text"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_map"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginLeft="16dp"
            app:backgroundTint="#EBEBEB"
            android:textColor="#AEAEAE"
            android:textSize="14dp"
            app:icon="@drawable/ic_baseline_save_alt_24"
            app:iconTint="#AEAEAE"
            android:layout_weight="1"
            app:elevation="4dp"
            app:iconGravity="textStart" />
        <Space
            android:layout_width="24dp"
            android:layout_height="match_parent" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            app:elevation="4dp"
            app:icon="@drawable/ic_baseline_play_arrow_24"
            app:iconGravity="textStart"
            app:backgroundTint="#C22D77"
            android:textSize="14dp"
            />
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>